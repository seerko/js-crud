<main class="main">
	{{> heading title="Інформація про замовлення"}}
	{{#with data}}
	{{#with purchase}}
	<form method="POST" action="/purchase-edit?id={{id}}" class="form-card">

		{{> field-text label="ID:" value=id}}

		{{> divider}}

		<div class="field-group">
			{{> field-text label="Ім'я:" value=firstname}}

			{{> field-text label="Прізвище:" value=lastname}}
		</div>

		<div class="field-group">
			{{> field-text label="Телефон:" value=phone}}

			{{> field-text label="Пошта:" value=email}}
		</div>

		{{> divider}}

		{{> field-text label="Коментар:" value=comment}}

		{{> field-text label="Назва товару:" value=product.title}}

		{{> divider}}

		<div class="field-group">
			{{> field-text label="Вартість товарів:" value=productPrice price=true}}

			{{> field-text label="Вартість доставки:" value=deliveryPrice price=true}}
		</div>

		<div class="field-group">
			{{> field-text label="Сума до сплати:" value=totalPrice price=true}}

			{{> field-text label="Нараховані бонуси:" value=addBonus price=true}}
		</div>

		{{> divider}}

		{{> button text="Змінити дані"}}

	</form>
	{{/with}}
	{{/with}}
</main>